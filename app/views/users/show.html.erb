<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= image_tag @user.get_profile_image(100,100) %>
      <table class="table">
        <tb>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
          </tr>
        </tb>
      </table>
      <div class="row">
        <%= link_to edit_user_path(@user), class: "btn btn-outline-secondary btn-block edit_user_path(@user)" %>
         <i class="fa-solid fa-user-gear"></i>
      </div>
      <h2 class="mt-3">New book</h2>
      <%= form_with model: @book do |f| %>
       <div class="form-group">
         <p>Title</p>
         <input class="form-control book_title" type="text" name="book[title]" id="book_title">
       </div>
       <div class="form-group">
         <p>Opinion</p>
         <textarea class="form-control book_body" name="book[body]" id="book_body"></textarea>
       </div>
       <div class="form-group">
         <input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book"></inout>
       </div>
      <% end %>
    </div>
  </div>
</div>
