<h2>Books</h2>
<% @books.each do |book| %>
 <div>
   <p>Title</p>
   <span>
     <%= link_to book.title, book_path(book.id) %>
   </span>
   <p>Opinion : <%= book.body %></p>
 </div>
<% end %>



<h1>New book</h1>
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>
